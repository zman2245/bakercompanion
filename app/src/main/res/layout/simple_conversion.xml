<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:weightSum="10"
    android:padding="10dp"
    android:background="#EEE"
    tools:context="com.bigzindustries.brochefbakercompanion.activities.ConversionsActivity">

    <TextView
        style="@style/ConversionsListText"
        android:id="@+id/ingredient_value"
        android:layout_weight="3"
        android:textStyle="bold"
        />

    <TextView
        style="@style/ConversionsListText"
        android:id="@+id/from_value"
        android:layout_weight="3"
        />

    <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_trending_flat_black_48dp"
        android:padding="3dp"
        />

    <TextView
        style="@style/ConversionsListText"
        android:id="@+id/to_value"
        android:layout_weight="3"
        />

</LinearLayout>
