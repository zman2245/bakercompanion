<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#EEE"
    tools:context="com.bigzindustries.brochefbakercompanion.activities.ConversionSetsActivity">

    <RelativeLayout
        android:id="@+id/ingredient_container"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:padding="5dp"
        android:background="#AAA">

        <TextView
            android:id="@+id/ingredient_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Ingredient" />

        <Spinner
            android:id="@+id/ingredient_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ingredient_label"
            android:layout_marginLeft="15dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/swap"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_swap_vert_black_48dp"/>

        <LinearLayout
            android:id="@+id/from_and_to"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_toLeftOf="@id/swap"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/from"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/from_value"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:selectAllOnFocus="true"
                    android:hint="0.0"
                    android:inputType="numberDecimal"
                    android:textColor="#000"/>

                <Spinner
                    android:id="@+id/from_unit_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/from_value"
                    android:layout_marginTop="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/to"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/to_value"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:hint="0.0"
                    android:inputType="numberDecimal"
                    android:enabled="false"
                    android:textColor="#333"/>

                <Spinner
                    android:id="@+id/to_unit_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/to_value"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
